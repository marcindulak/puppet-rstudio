<VirtualHost *:80>

  TransferLog	<%= scope.lookupvar("rstudio::params::apache_logdir") %>/rstudio_access.log
  ErrorLog	<%= scope.lookupvar("rstudio::params::apache_logdir") %>/rstudio_error.log

  <Proxy *>
    Allow from localhost
  </Proxy>

  ProxyPass        / http://localhost:<%= scope.lookupvar("rstudio::params::port") %>/
  ProxyPassReverse / http://localhost:<%= scope.lookupvar("rstudio::params::port") %>/

</VirtualHost>
